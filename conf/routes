# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Bundle files generated by Webpack
GET     /dist/*file                 controllers.HomeController.dist(file)

#GET     /api/auth/:userName         controllers.AuthController.login(userName: String)

GET     /api/user                   controllers.UserController.getAll

GET     /api/user/:id               controllers.UserController.get(id: Int)

#POST    /api/auth/login             controllers.AuthController.register
PUT     /api/auth/login             controllers.AuthController.login

PUT     /api/auth/register          controllers.AuthController.register

#POST    /user/:fname/:sname         controllers.UserController.create(fname: String, sname: String)

#Swagger
#GET     /swagger.json           controllers.ApiHelpController.getResources

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
